# ASTRO Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Default provider: openai, gemini, ollama, openrouter
LLM_PROVIDER=openai

# Default model (varies by provider)
LLM_MODEL=gpt-4o-mini

# =============================================================================
# API Keys
# =============================================================================

# OpenAI API Key (required for openai provider)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Google Gemini API Key (required for gemini provider)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AI...
# Alternative env var name also supported:
# GOOGLE_API_KEY=AI...

# OpenRouter API Key (required for openrouter provider)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-...

# =============================================================================
# Ollama Configuration (Local)
# =============================================================================

# Ollama base URL (default: http://localhost:11434)
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Optional: Custom API Base URLs
# =============================================================================

# Override the base URL for any OpenAI-compatible provider
# LLM_BASE_URL=https://api.example.com/v1

# =============================================================================
# System Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Environment: development, production
ENVIRONMENT=production

# =============================================================================
# Security (Code Execution)
# =============================================================================

# Enable Docker sandbox for code execution (REQUIRED for production)
USE_DOCKER_SANDBOX=true

# Docker execution timeout in seconds
DOCKER_EXECUTION_TIMEOUT=30
